
<div class="col-md-12">
	<div class="row">

		<div class="col-md-6">
			<%if @posts.empty? == false%>
				<div class="page-header">
				  <h1>These are all results for <strong><%= @search_term%></strong> posts among title and content</h1>
				</div>
				<div>
					<% @posts.each do |post| %>
						<div class="panel panel-default">
							<div class="panel-heading">
								<h3 class="panel-title"><%= link_to(post.title, user_post_path(post.user_id, post.id)) %></h3>
							</div>
							<div class="panel-body">
								<p><%= post.created_at.strftime('%d %B %Y') %></p> 
								<div class="preview">
									<p><%= show_text_preview(post.content) %></p>
								</div>
							</div>
						</div>
					<% end %>
				</div>

			<% else %>
			<div class="page-header">
				<h1>There are no results for <%=@search_term %> among <em>title</em> and <em>content</em></h1>
				</div>
			<% end %>
		</div>

		
		<div class="col-md-6">
			<%if @posts_by_category.empty? == false %>
				<div class="page-header">
					  <h1>These are all results for <strong><%= @search_term%></strong> posts among <em>categories</em></h1>
				</div>
				<% @posts_by_category.each do |post_by_category| %>
					<div class="panel panel-default">
					<div class="panel-heading">
						<h1 class="panel-title"><%=  link_to(post_by_category.title, user_post_path(post_by_category.user_id, post_by_category.id)) %></h1>
					</div>
					<div class="panel-body">
						<p><%= post_by_category.created_at.strftime('%d %B %Y') %></p> 
						<div class="preview">
							<p><%= show_text_preview(post_by_category.content) %></p>
						</div>
					</div>
					</div>
				<% end %>
					
			<% else %>
			<div class="page-header">
				<h1>There are no results for <%=@search_term %> among categories</h1>
				</div>
			<% end %>
		</div>
	</div>
</div>