<h1><%= @post.title%></h1>

<p class="date"><%= time_ago_in_words(@post.created_at)%> Ago</p>

<p><%= @post.content %></p>

<button><%= link_to("Edit this post", edit_post_path) %></button>
<button><%= link_to("Delete this post", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?"}) %></button>