<h1><%= @post.title%></h1>

<p class="date"><%= time_ago_in_words(@post.created_at)%> ago</p>

<p><%= @post.content %></p>

<% if current_user%>
<% if @request_accepted || @user.id == current_user.id %>
<div class="buttons-white-font">
	<button class="btn btn-warning col-md-2"><%= link_to("Edit this post", edit_user_post_path) %></button>
	<br>
	<br>
<% end %>
<% end %>

<% if current_user%>
<% if @user.id == current_user.id %>
<button class="btn btn-danger col-md-2"><%= link_to("Delete this post", user_post_path(@user, @post), method: :delete, data: { confirm: "Are you sure you want to delete this post?"}) %></button>
<br>
<br>
</div>
<% end %>
<% end %>

<%if current_user%>
<%if (params[:user_id]).to_i != current_user.id %>
	<%= form_for @request, url: '/requests' do |f| %>
		<%= f.hidden_field :post_id, :value => @post.id %>
		<%= f.hidden_field :editor_id, :value => current_user.id %>
		<%= f.hidden_field :author_id, :value => @user.id %>
		<%= f.submit "Send a request to edit", :class=> "btn btn-success col-md-2"%>
	<% end %>
<% end %>
<% end %>