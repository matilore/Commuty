<h1><%= @post.title%></h1>

<p class="date"><%= time_ago_in_words(@post.created_at)%> ago</p>

<p><%= @post.content %></p>

<button><%= link_to("Edit this post", edit_user_post_path) %></button>
<button><%= link_to("Delete this post", user_post_path(@user, @post), method: :delete, data: { confirm: "Are you sure you want to delete this post?"}) %></button>
<br>
<br>

<%if (params[:user_id]).to_i != current_user.id %>
	<%= form_for @request, url: '/requests' do |f| %>
		<%= f.hidden_field :post_id, :value => @post.id %>
		<%= f.hidden_field :editor_id, :value => current_user.id %>
		<%= f.hidden_field :author_id, :value => @user.id %>
		<%= f.submit "Send a request to edit this file" %>
	<% end %>
<% end %>