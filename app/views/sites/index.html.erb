<div class="col-md-8">

	<div class="page-header">
	  <h1>Commuty Posts</h1>
	</div>
	

	<div>

		<% @posts.each do |post| %>

			<div class="panel panel-success">
				<div class="panel-heading">
					<h3 class="panel-title"><%= link_to(post.title, user_post_path(post.user_id, post.id)) %></h3>
				</div>

				<div class="panel-body">
					<p><%= link_to(User.find_by(id: post.user_id).username, user_posts_path(post.user_id))%></p>
					<p><%= post.created_at.strftime('%d %B %Y') %></p>
				</div>
			</div>
		<% end %>
	</div>
</div>